{
	"editor.insertSpaces": false,
	"editor.tabSize": 2,
	"[typescript]": {
		"editor.tabSize": 2,
	},
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": true
	},
	"eslint.format.enable": true,
	"eslint.run": "onSave",
	"editor.formatOnSave": true,
	"eslint.validate": [
		"javascript",
		"javascriptreact"
	],
	"editor.fontFamily": "Fira Code",
	"editor.fontSize": 16,
	"editor.fontLigatures": true,
	"eslint.options": {
		"configFile": "./.eslintrc.json"
	}
}